<%= form_for(@selection) do |f| %>
<%= @selection.errors.full_messages.to_sentence %>
<fieldset>
<p>
  <%= f.label :title %><br/>
  <%= f.text_field :title %>
</p>

<p>
  <%= f.label :composer %><br/>
  <%= f.text_field :composer %>
</p>

<p>
  <%= f.label :publisher %><br/>
  <%= f.text_field :publisher %>
</p>

<p>
  <%= f.label :voicing %><br/>
  <%= f.text_field :voicing, size:8 %>
</p>

<p>
  <%= f.label :pml %><br/>
  <%= f.text_field :pml, size: 6 %>
</p>

<p>
  <%= f.label :notes %><br/>
  <%= f.text_area :notes, cols: 40, rows: 7 %>
</p>
</fieldset>


<p id="form-button">
  <%= f.submit %>
  <%= link_to 'Cancel', selections_path %>
</p>


<% end %>
